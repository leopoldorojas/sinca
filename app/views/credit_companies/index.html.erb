<h1><%= t('credit_company.listing') %></h1>

<%= paginate @credit_companies %>

<table>
  <thead>
    <tr>
      <th><%= CreditCompany.human_attribute_name('name') %></th>
      <th><%= CreditCompany.human_attribute_name('short_name') %></th>
      <th><%= CreditCompany.human_attribute_name('identifier') %></th>
      <th><%= CreditCompany.human_attribute_name('email') %></th>
      <th><%= CreditCompany.human_attribute_name('location') %></th>
      <th><%= CreditCompany.human_attribute_name('executive') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_companies.each do |credit_company| %>
      <tr>
        <td><%= credit_company.name %></td>
        <td><%= credit_company.short_name %></td>
        <td><%= credit_company.identifier %></td>
        <td><%= credit_company.email %></td>
        <td><%= credit_company.location %></td>
        <td><%= credit_company.executive %></td>
        <td><%= link_to t('show'), credit_company %></td>
        <td><%= link_to t('edit'), edit_credit_company_path(credit_company) %></td>
        <td><%= link_to t('destroy'), credit_company, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @credit_companies %>

<br>

<%= link_to t('credit_company.new'), new_credit_company_path, class: "button small radius" %>
