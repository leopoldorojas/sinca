<h1><%= t('indicator.listing') %></h1>

<table>
  <thead>
    <tr>
      <th><%= Indicator.human_attribute_name('register_date') %></th>
      <th><%= Indicator.human_attribute_name('credit_company') %></th>
      <th><%= Indicator.human_attribute_name('file_name') %></th>
      <th><%= Indicator.human_attribute_name('indicator_1') %></th>
      <th><%= Indicator.human_attribute_name('indicator_2') %></th>
      <th><%= Indicator.human_attribute_name('indicator_3') %></th>
      <th><%= Indicator.human_attribute_name('status') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @indicators.each do |indicator| %>
      <tr>
        <td><%= indicator.register_date %></td>
        <td><%= indicator.credit_company %></td>
        <td><%= indicator.file_name %></td>
        <td><%= indicator.indicator_1 %></td>
        <td><%= indicator.indicator_2 %></td>
        <td><%= indicator.indicator_3 %></td>
        <td><%= indicator.status %></td>
        <td><%= link_to t('show'), indicator, class: "button radius" %></td>
        <td><%= link_to t('edit'), edit_indicator_path(indicator), class: "button radius" %></td>
        <td><%= link_to t('destroy'), indicator, method: :delete, data: { confirm: 'Are you sure?' }, class: "button radius" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('indicator.new'), new_indicator_path, class: "button radius" %>
<%= link_to t('indicator.upload'), upload_new_indicator_path, class: "button radius" %>
