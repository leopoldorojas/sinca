<h3><%= t('indicator.new') %></h3>
<p><%= t('indicator.indications_for_upload') %></p>

<%= form_for(@indicator, url: {action: "receive_and_create"}) do |f| %>
  <% if @indicator.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{pluralize(@indicator.errors.count, 'error')} #{t('indicator.save_failed')}" %></h2>

      <ul>
      <% @indicator.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="small-12 columns">
      <div class="small-3 columns">
        <%= f.label :file_name %>
        <%= f.file_field :file_name %>
      </div>

      <div class="small-2 columns">
        <div class="actions">
          <%= f.submit t('upload'), class: "button small radius" %>
        </div>
      </div>

      <div class="small-9 columns">
      </div>

    </div>
  </div>

<% end %>
