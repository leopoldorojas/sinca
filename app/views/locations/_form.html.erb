<%= form_for(@location) do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :code %><br>
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <% if @type != "Location" %>
    <%= f.hidden_field :type, { value: @type.camelcase } %>
  <% else %>
    <div class="field">
      <%= f.label :type %><br>
      <%= f.select :type, Location.types.map {|type| [type.constantize.model_name.human, type.camelcase]}, {} %>
    </div>
  <% end %>
  <% if @location.parent %>
    <div class="field">
      <%= f.label "#{@location.parent.underscore}_id".to_sym %><br>
      <%= f.collection_select :parent_id, "#{@location.parent}".constantize.all, :id, :name %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit class: "button small radius" %>
  </div>
<% end %>
